<div id="AddEdit" class="easyui-window" data-options="modal:true,closed:true,maximizable:false,resizable:false,minimizable:false,collapsible:false" style="padding: 10px; width: 340px;">
    <form id="frmAddEdit" class="form-horizontal" method="post">
        <div class="control-group">
            <label class="control-label" for="_DepartmentName">部门名称</label>
            <div class="controls">
                <input name="DepartmentName" id="_DepartmentName" class="span3 easyui-validatebox" placeholder="部门名称" maxlength="20" type="text" data-options="required:true"/>
            </div>
        </div>
        <div class="input-prepend inline">
            <label class="control-label" for="_ParentID">上级部门</label>
            <div class="controls">
                <input name="ParentID" id="_ParentID" class="span3 easyui-combotree" data-options="url:'@Url.Action("Tree", "Group")',method:'post',required:true" style="width:216px;height:24px;"/>
            </div>
        </div>
        <div class="input-prepend inline">
            <label class="control-label" for="_UnitID">所属单位</label>
            <div class="controls">
                <input name="UnitID" id="_UnitID" class="span3 easyui-combotree" data-options="url:'@Url.Action("Tree", "Unit", new { isDefault = false })',method:'get',required:true" style="width:216px;height:24px;"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="_Sort">排序</label>
            <div class="controls">
                <input name="Sort" id="_Sort" class="span3 easyui-numberspinner" placeholder="排序" type="text" data-options="required:true,min:0,max:100000,missingMessage: '此项为整数，数值越大排序越靠前'" style="width:216px;height:24px;"/>
            </div>
        </div>
        <div class="input-prepend inline">
            <label class="control-label" for="_IsDisplay">是否显示</label>
            <div class="controls">
               
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="_Description">备注</label>
            <div class="controls">
                <textarea id="_Description" name="Description" class="span3 easyui-validatebox" placeholder="备注" data-options="required:false" rows="4" maxlength="200"></textarea>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input id="_ID" name="ID" type="hidden" />
                <a id="btnOK" class="easyui-linkbutton" data-options="iconCls:'icon-ok'">确定</a>
                <a id="btnRest" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">重置</a>
            </div>
        </div>
    </form>
</div>