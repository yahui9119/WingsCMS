@model SignInInput
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign In</h2>
<div class="explain">
<p>Login: o</p>
<p>Password: 1</p>
<p>o has the admin role, admins can manage users and restore everything that was deleted</p>
<p>o is embeded in the code so you won't see him in the users list (unless somebody adds him)</p>
</div>
<div style="margin:auto;width:600px;">
@using (Html.BeginForm()) { 
    @Html.EditorFor(o => o.Login)
    @Html.EditorFor(o => o.Password)
    @Html.EditorFor(o => o.Remember)
    <div class="efield"><div class="elabel">&nbsp;</div>
    <input type='submit' value='log in' />
    </div>    
}
<br class="cbt" />
<br />
@Html.ValidationSummary(true)
</div>

